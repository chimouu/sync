const mongoose = require('mongoose');

const userSchema = new mongoose.Schema({
  username: {
    type: String,
    required: true,
    unique: true,
    trim: true
  },
  password: { // Consider using bcrypt for hashing passwords before storage
    type: String,
    required: true
  },
  // Add additional fields as necessary
});

const User = mongoose.model('User', userSchema);

module.exports = User;
